{
  "name": "couple-evolution-platform",
  "private": true,
  "version": "1.0.0",
  "description": "Premium SaaS platform for couple habit evolution",
  "workspaces": [
    "apps/web",
    "apps/api",
    "packages/shared"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace @couple-evolution/web",
    "dev:api": "npm run start:dev --workspace @couple-evolution/api",
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:api\"",
    "build:web": "npm run build --workspace @couple-evolution/web",
    "build:api": "npm run build --workspace @couple-evolution/api",
    "build": "npm run build:web; if ($LASTEXITCODE -ne 0) { exit $LASTEXITCODE }; npm run build:api",
    "lint:web": "npm run lint --workspace @couple-evolution/web",
    "lint:api": "npm run lint --workspace @couple-evolution/api",
    "lint": "npm run lint:web; if ($LASTEXITCODE -ne 0) { exit $LASTEXITCODE }; npm run lint:api",
    "prisma:generate": "npm run prisma:generate --workspace @couple-evolution/api",
    "prisma:migrate": "npm run prisma:migrate --workspace @couple-evolution/api"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
